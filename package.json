{
  "name": "servicehub-deployment",
  "version": "1.0.0",
  "description": "ServiceHub NestJS Backend Deployment",
  "main": "backend-nestjs/dist/main.js",
  "scripts": {
    "build": "npm run build:backend",
    "build:frontend": "cd frontend && npm install && npm run build",
    "build:backend": "cd backend-nestjs && npm install && npx prisma generate && npm run build",
    "start": "cd backend-nestjs && npm run start:prod",
    "start:prod": "cd backend-nestjs && npm run start:prod",
    "dev": "concurrently \"npm run dev:backend\" \"npm run dev:frontend\"",
    "dev:frontend": "cd frontend && npm run dev",
    "dev:backend": "cd backend-nestjs && npm run start:dev",
    "deploy": "vercel --prod",
    "preview": "vercel",
    "postinstall": "cd backend-nestjs && npm install && npx prisma generate"
  },
  "keywords": ["nestjs", "railway", "backend"],
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  },
  "devDependencies": {
    "concurrently": "^8.2.0"
  }
}
